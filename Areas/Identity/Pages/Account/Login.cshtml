@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid login-page">
    <div class="row min-vh-100">
        <!-- Left Side - Image/Branding -->
        <div class="col-lg-6 d-none d-lg-block p-0 login-image-section">
            <div class="login-overlay">
                <div class="login-branding">
                    <div class="text-white text-center p-5">
                        <i class="bi bi-building display-1 mb-4"></i>
                        <h1 class="display-4 fw-bold mb-3">ADS Corp</h1>
                        <h2 class="h3 mb-4">Resource Booking System</h2>
                        <p class="lead mb-4">
                            Professional resource management platform for modern businesses
                        </p>
                        <div class="feature-list text-start mt-5">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                                <span class="fs-5">Real-time availability tracking</span>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                                <span class="fs-5">Intelligent conflict detection</span>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                                <span class="fs-5">Automated notifications</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                                <span class="fs-5">Comprehensive analytics</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Side - Login Form -->
        <div class="col-lg-6 d-flex align-items-center">
            <div class="login-form-container w-100 p-4 p-lg-5">
                <div class="text-center mb-4 d-lg-none">
                    <i class="bi bi-building text-primary" style="font-size: 3rem;"></i>
                    <h2 class="mt-3">ADS Corp</h2>
                </div>
                
                <div class="login-form-card">
                    <h1 class="display-6 fw-bold mb-2">Welcome Back</h1>
                    <p class="text-muted mb-4">Sign in to access your resource bookings</p>
                    
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">
                                    <i class="bi bi-lock me-2"></i>Password
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <div class="form-check mb-4">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    Remember me on this device
                                </label>
                            </div>
                            
                            <div class="d-grid mb-3">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                </button>
                            </div>
                            
                            <div class="row">
                                <div class="col-6">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                        <i class="bi bi-question-circle me-1"></i>Forgot password?
                                    </a>
                                </div>
                                <div class="col-6 text-end">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                        <i class="bi bi-person-plus me-1"></i>Register
                                    </a>
                                </div>
                            </div>
                        </form>
                    </section>
                    
                    @if (Model.ExternalLogins?.Count > 0)
                    {
                        <hr class="my-4" />
                        <div>
                            <p class="text-muted text-center mb-3">Or sign in with</p>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div class="d-grid gap-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        </div>
                    }
                    
                    <div class="alert alert-info mt-4" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Demo Accounts:</strong>
                        <ul class="mb-0 mt-2 small">
                            <li>sipho@company.com / Demo123!</li>
                            <li>thabo@company.com / Demo123!</li>
                            <li>amanda@company.com / Demo123!</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .login-page {
        min-height: 100vh;
        margin: -1rem -0.75rem;
    }
    
    .login-image-section {
        background-image: url('https://images.unsplash.com/photo-1497366216548-37526070297c?w=1200&h=800&fit=crop');
        background-size: cover;
        background-position: center;
        position: relative;
    }
    
    .login-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.95) 0%, rgba(13, 71, 161, 0.95) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .login-branding {
        width: 100%;
        max-width: 600px;
    }
    
    .login-form-container {
        max-width: 500px;
        margin: 0 auto;
    }
    
    .login-form-card {
        animation: fadeInUp 0.6s ease-out;
    }
    
    .form-floating > .form-control {
        height: 58px;
        padding-top: 1.625rem;
    }
    
    .form-floating > label {
        padding-top: 1rem;
    }
    
    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
    
    .feature-list {
        max-width: 500px;
        margin: 0 auto;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Dark theme support */
    [data-theme="dark"] .login-form-container {
        background-color: #1a1a1a;
    }
    
    [data-theme="dark"] .login-image-section {
        filter: brightness(0.8);
    }
    
    [data-theme="dark"] .alert-info {
        background-color: #1f3a5f;
        border-color: #2d5a8c;
        color: #a8c5e9;
    }
    
    /* Mobile adjustments */
    @@media (max-width: 991px) {
        .login-page {
            margin: 0;
        }
        
        .login-form-container {
            padding: 2rem 1rem !important;
        }
    }
</style>
