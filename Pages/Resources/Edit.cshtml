@page "{id:int}"
@model ResourceBooking.Pages.Resources.EditModel
@{
    ViewData["Title"] = "Edit Resource";
}

<h2>Edit Resource</h2>
<hr />
<form method="post" aria-label="Edit resource form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Input.Id" type="hidden" />
    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Location" class="form-label"></label>
        <input asp-for="Input.Location" class="form-control" />
        <span asp-validation-for="Input.Location" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Capacity" class="form-label"></label>
        <input asp-for="Input.Capacity" class="form-control" />
        <span asp-validation-for="Input.Capacity" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.IsAvailable" />
                <label class="form-check-label" asp-for="Input.IsAvailable"></label>
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="Input.UnavailabilityType" class="form-label"></label>
                <select asp-for="Input.UnavailabilityType" class="form-select" asp-items="Html.GetEnumSelectList<ResourceBooking.Models.UnavailabilityType>()"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Input.UnavailableUntil" class="form-label"></label>
                <input asp-for="Input.UnavailableUntil" type="date" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.UnavailabilityReason" class="form-label"></label>
                <input asp-for="Input.UnavailabilityReason" class="form-control" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Resources/Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
