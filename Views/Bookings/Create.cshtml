@model ResourceBooking.Models.CreateBookingViewModel

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" id="createBookingForm">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            
            <div class="form-group mb-3">
                <label asp-for="ResourceId" class="control-label">Resource</label>
                <select asp-for="ResourceId" class="form-select" asp-items="@(new SelectList((IEnumerable<ResourceBooking.Models.Resource>)ViewBag.Resources, "Id", "Name"))">
                    <option value="">-- Choose a resource --</option>
                </select>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="StartTime" class="control-label">Start Time</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="EndTime" class="control-label">End Time</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Purpose" class="control-label">Purpose</label>
                <input asp-for="Purpose" class="form-control" maxlength="500" />
                <span asp-validation-for="Purpose" class="text-danger"></span>
                <div class="form-text">Describe the purpose of this booking.</div>
            </div>
            
            <!-- Recurring Booking Section -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="IsRecurring" id="isRecurring" />
                <label class="form-check-label" asp-for="IsRecurring">
                    <i class="bi bi-arrow-repeat"></i> Make this a recurring booking
                </label>
            </div>
            
            <div id="recurringSection" style="display: none;">
                <div class="card border-info mb-3">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="bi bi-arrow-repeat"></i> Recurring Settings</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="RecurrenceType" class="control-label">Repeat</label>
                                    <select asp-for="RecurrenceType" class="form-select">
                                        <option value="">Select frequency...</option>
                                        <option value="0">Daily</option>
                                        <option value="1">Weekly</option>
                                        <option value="2">Monthly</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="RecurrenceInterval" class="control-label">Every</label>
                                    <div class="input-group">
                                        <input asp-for="RecurrenceInterval" type="number" class="form-control" min="1" max="30" value="1" />
                                        <span class="input-group-text" id="intervalLabel">week(s)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="RecurrenceEndDate" class="control-label">End Date</label>
                            <input asp-for="RecurrenceEndDate" type="date" class="form-control" />
                            <small class="form-text text-muted">When should the recurring bookings stop?</small>
                        </div>
                        
                        <div class="alert alert-info py-2">
                            <small>
                                <i class="bi bi-info-circle"></i>
                                <strong>Note:</strong> Recurring bookings will be created automatically. You can modify or cancel individual occurrences later.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Booking</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Booking Guidelines</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small">
                    <li><i class="bi bi-check-circle-fill text-success"></i> Select an available resource</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Choose start and end times</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> End time must be after start time</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Check for conflicts with existing bookings</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Provide a clear purpose for the booking</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> You must be logged in to create bookings</li>
                </ul>
                
                <div class="mt-3">
                    <h6 class="small">Recurring Options:</h6>
                    <div class="small text-muted">
                        <span class="badge bg-primary me-1">Daily</span> - Every day<br>
                        <span class="badge bg-success me-1">Weekly</span> - Same day each week<br>
                        <span class="badge bg-info">Monthly</span> - Same date each month
                    </div>
                </div>
                
                <div class="alert alert-info py-2 mt-3">
                    <small>
                        <strong>Logged in as:</strong> @User.Identity?.Name
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Modal -->
<div class="modal fade" id="confirmBookingModal" tabindex="-1" aria-labelledby="confirmBookingLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmBookingLabel"><i class="bi bi-check2-square"></i> Confirm Booking Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <dl class="row mb-0 small">
          <dt class="col-4">Resource</dt>
          <dd class="col-8" id="cfResource">-</dd>
          <dt class="col-4">Start</dt>
          <dd class="col-8" id="cfStart">-</dd>
          <dt class="col-4">End</dt>
          <dd class="col-8" id="cfEnd">-</dd>
          <dt class="col-4">Recurring</dt>
          <dd class="col-8" id="cfRecurring">No</dd>
          <dt class="col-4">Purpose</dt>
          <dd class="col-8" id="cfPurpose">-</dd>
        </dl>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Review</button>
        <button type="button" class="btn btn-primary" id="confirmBookingSubmit">Confirm & Create</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const isRecurringCheckbox = document.getElementById('isRecurring');
            const recurringSection = document.getElementById('recurringSection');
            const recurrenceTypeSelect = document.querySelector('select[name="RecurrenceType"]');
            const intervalLabel = document.getElementById('intervalLabel');
            const form = document.getElementById('createBookingForm');
            const modalEl = document.getElementById('confirmBookingModal');
            const bsModal = new bootstrap.Modal(modalEl);
            let confirmed = false;
            
            function toggleRecurringSection() { recurringSection.style.display = isRecurringCheckbox.checked ? 'block' : 'none'; }
            function updateIntervalLabel() {
                const type = recurrenceTypeSelect.value;
                intervalLabel.textContent = type === '0' ? 'day(s)' : type === '1' ? 'week(s)' : type === '2' ? 'month(s)' : 'period(s)';
            }
            toggleRecurringSection();
            updateIntervalLabel();
            isRecurringCheckbox.addEventListener('change', toggleRecurringSection);
            recurrenceTypeSelect.addEventListener('change', updateIntervalLabel);

            form.addEventListener('submit', function(e) {
                if (confirmed) return; // let it go through on second attempt
                e.preventDefault();
                // populate modal
                const resText = document.querySelector('select[name="ResourceId"] option:checked')?.textContent?.trim() || '-';
                const start = document.getElementById('StartTime').value;
                const end = document.getElementById('EndTime').value;
                const purpose = document.getElementById('Purpose').value;
                document.getElementById('cfResource').textContent = resText;
                document.getElementById('cfStart').textContent = start.replace('T',' ');
                document.getElementById('cfEnd').textContent = end.replace('T',' ');
                document.getElementById('cfPurpose').textContent = purpose || '-';
                document.getElementById('cfRecurring').textContent = isRecurringCheckbox.checked ? 'Yes' : 'No';
                bsModal.show();
            });

            document.getElementById('confirmBookingSubmit').addEventListener('click', function() {
                confirmed = true;
                bsModal.hide();
                form.submit();
            });
        });
    </script>
}