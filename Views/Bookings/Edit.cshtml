@model ResourceBooking.Models.EditBookingViewModel

@{
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            
            <div class="form-group mb-3">
                <label asp-for="ResourceId" class="control-label">Resource</label>
                <select asp-for="ResourceId" class="form-select" asp-items="@(new SelectList((IEnumerable<ResourceBooking.Models.Resource>)ViewBag.Resources, "Id", "Name"))">
                    <option value="">-- Choose a resource --</option>
                </select>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="StartTime" class="control-label">Start Time</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="EndTime" class="control-label">End Time</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Purpose" class="control-label">Purpose</label>
                <input asp-for="Purpose" class="form-control" maxlength="500" />
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Cancelled" />
                <label class="form-check-label" asp-for="Cancelled">
                    Cancelled
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="Ics" asp-route-id="@Model.Id" class="btn btn-outline-success">
                    <i class="bi bi-calendar-plus"></i> Download .ics
                </a>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Edit Guidelines</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small">
                    <li><i class="bi bi-check-circle-fill text-success"></i> You can only edit your own bookings</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Check for conflicts when changing times</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> Use "Cancelled" checkbox to cancel booking</li>
                    <li><i class="bi bi-check-circle-fill text-success"></i> All changes will be saved immediately</li>
                </ul>
                
                <div class="alert alert-info py-2 mt-3">
                    <small>
                        <strong>Logged in as:</strong> @User.Identity?.Name
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Form submission debugging
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('form').addEventListener('submit', function(e) {
                console.log('Edit form submitted');
                console.log('Id:', document.getElementById('Id').value);
                console.log('ResourceId:', document.getElementById('ResourceId').value);
                console.log('StartTime:', document.getElementById('StartTime').value);
                console.log('EndTime:', document.getElementById('EndTime').value);
                console.log('Purpose:', document.getElementById('Purpose').value);
                console.log('Cancelled:', document.getElementById('Cancelled').checked);
            });
        });
    </script>
}