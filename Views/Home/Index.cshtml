@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section text-center py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 text-lg-start mb-4 mb-lg-0">
                <h1 class="display-3 fw-bold mb-3">Welcome to ADS Corp</h1>
                <h2 class="h3 text-primary mb-4">Resource Booking System</h2>
                <p class="lead mb-4">
                    Streamline your resource management with our professional booking platform. 
                    Book meeting rooms, vehicles, and equipment effortlessly.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-4 me-md-2">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-lg px-4">
                        <i class="bi bi-person-plus me-2"></i>Register
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image-container">
                    <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=600&h=400&fit=crop" 
                         alt="Modern Office Space" 
                         class="img-fluid rounded shadow-lg">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold mb-3">Why Choose Our System?</h2>
            <p class="lead text-muted">Professional resource management made simple</p>
        </div>
    </div>
    
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-calendar-check text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="h4 mb-3">Easy Booking</h3>
                    <p class="text-muted">
                        Book resources in seconds with our intuitive interface. 
                        View availability, select your time slot, and confirm instantly.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="h4 mb-3">Conflict-Free</h3>
                    <p class="text-muted">
                        Our intelligent system prevents double bookings automatically. 
                        Real-time conflict detection ensures smooth operations.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-bell text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="h4 mb-3">Smart Notifications</h3>
                    <p class="text-muted">
                        Stay informed with email and in-app notifications. 
                        Get reminders and updates for all your bookings.
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-arrow-repeat text-info" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="h4 mb-3">Recurring Bookings</h3>
                    <p class="text-muted">
                        Save time with recurring bookings for regular meetings. 
                        Set up weekly or monthly patterns effortlessly.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-bar-chart text-danger" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="h4 mb-3">Analytics & Reports</h3>
                    <p class="text-muted">
                        Gain insights with comprehensive reports and analytics. 
                        Track utilization and optimize resource allocation.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-phone text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="h4 mb-3">Mobile Friendly</h3>
                    <p class="text-muted">
                        Access from any device, anywhere. 
                        Our responsive design works perfectly on all screens.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resources Preview Section -->
