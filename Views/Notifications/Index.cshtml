@model List<ResourceBooking.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<div class="row">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-bell"></i> Notifications</h2>
            <div>
                @if (Model.Any(n => !n.IsRead))
                {
                    <form asp-action="MarkAllAsRead" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-check-all"></i> Mark All as Read
                        </button>
                    </form>
                }
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>No notifications yet!</strong> 
                You'll receive notifications here when you create bookings, get confirmations, or other important updates.
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var notification in Model)
                {
                    <div class="list-group-item @(!notification.IsRead ? "list-group-item-light border-primary" : "")" 
                         style="@(!notification.IsRead ? "border-left: 4px solid var(--bs-primary);" : "")">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi @notification.TypeIcon @notification.TypeColor me-2"></i>
                                    <h6 class="mb-0 @(!notification.IsRead ? "fw-bold" : "")">@notification.Title</h6>
                                    @if (!notification.IsRead)
                                    {
                                        <span class="badge bg-primary ms-2">New</span>
                                    }
                                </div>
                                <p class="mb-2 @(!notification.IsRead ? "" : "text-muted")">@notification.Message</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> @notification.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy HH:mm")
                                    </small>
                                    @if (notification.BookingId.HasValue)
                                    {
                                        <a asp-controller="Bookings" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-calendar-event"></i> View Booking
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="dropdown ms-3">
                                <button class="btn btn-sm btn-link text-muted" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    @if (!notification.IsRead)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="markAsRead(@notification.Id)">
                                                <i class="bi bi-check"></i> Mark as Read
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a class="dropdown-item text-danger" href="#" onclick="deleteNotification(@notification.Id)">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> Notification Center</h5>
            </div>
            <div class="card-body">
                <h6>Notification Types:</h6>
                <ul class="list-unstyled small">
                    <li class="mb-2">
                        <i class="bi bi-person-plus text-primary"></i> <strong>Welcome:</strong> Account setup completed
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success"></i> <strong>Confirmed:</strong> Booking successfully created
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-x-circle text-danger"></i> <strong>Cancelled:</strong> Booking was cancelled
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-clock text-warning"></i> <strong>Reminder:</strong> Upcoming booking alerts
                    </li>
                </ul>
                
                <div class="alert alert-success py-2 mt-3">
                    <small>
                        <i class="bi bi-envelope-check"></i>
                        <strong>Email Notifications:</strong> All notifications are automatically sent to your registered email address with professional ADS Corp branding.
                    </small>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="bi bi-gear"></i> Notification Settings</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info py-2 mb-3">
                    <small>
                        <i class="bi bi-info-circle"></i>
                        <strong>Simple & Reliable:</strong> Your ADS Corp Resource Booking System uses professional email notifications to keep you informed.
                    </small>
                </div>
                
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="emailNotifications" checked disabled>
                    <label class="form-check-label" for="emailNotifications">
                        <i class="bi bi-envelope"></i> Email notifications (Always enabled)
                    </label>
                </div>
                
                <div class="mt-3">
                    <h6 class="small text-muted">Email Features:</h6>
                    <ul class="list-unstyled small text-muted">
                        <li><i class="bi bi-check text-success"></i> Professional ADS Corp branding</li>
                        <li><i class="bi bi-check text-success"></i> Mobile-responsive design</li>
                        <li><i class="bi bi-check text-success"></i> Booking confirmations & cancellations</li>
                        <li><i class="bi bi-check text-success"></i> Welcome messages for new users</li>
                        <li><i class="bi bi-check text-success"></i> Corporate contact information</li>
                    </ul>
                </div>
                
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="bi bi-shield-check"></i>
                        Emails are sent to: <strong>@User.Identity?.Name</strong>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>

@section Scripts {
    <script>
        function markAsRead(notificationId) {
            $.post('/Notifications/MarkAsRead', { id: notificationId }, function() {
                location.reload();
            });
        }

        function deleteNotification(notificationId) {
            if (confirm('Are you sure you want to delete this notification?')) {
                $.post('/Notifications/Delete', { id: notificationId }, function() {
                    location.reload();
                });
            }
        }
    </script>
}