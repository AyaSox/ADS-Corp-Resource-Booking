@model ResourceBooking.Controllers.ReportsViewModel

@{
    ViewData["Title"] = "Reports & Analytics";
}

<div class="d-flex align-items-center mb-4">
    <i class="bi bi-bar-chart-line me-3 text-primary" style="font-size: 2rem;"></i>
    <div>
        <h1 class="mb-1">Reports & Analytics</h1>
        <p class="text-muted mb-0">ADS Corp Resource Management Reports - Generated @DateTime.Now.ToString("MMMM dd, yyyy")</p>
    </div>
</div>

<!-- Overview Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <i class="bi bi-building display-4 mb-2"></i>
                <h3 class="card-title">@Model.DashboardStats.TotalResources</h3>
                <p class="card-text">Total Resources</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <i class="bi bi-calendar-check display-4 mb-2"></i>
                <h3 class="card-title">@Model.ThisMonthBookings</h3>
                <p class="card-text">This Month's Bookings</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <i class="bi bi-speedometer2 display-4 mb-2"></i>
                <h3 class="card-title">@Model.DashboardStats.AverageUtilizationPercentage%</h3>
                <p class="card-text">Resource Utilization</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <i class="bi bi-people display-4 mb-2"></i>
                <h3 class="card-title">@Model.UserActivity.Count</h3>
                <p class="card-text">Active Users</p>
            </div>
        </div>
    </div>
</div>

<!-- Active Users Card -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Active Users (This Month)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.DashboardStats.ActiveUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Popular Resources -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-star-fill text-warning me-2"></i>Popular Resources</h5>
            </div>
            <div class="card-body">
                @if (Model.PopularResources.Any())
                {
                    @foreach (var resource in Model.PopularResources.Take(10))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
                            <div>
                                <strong>@resource.ResourceName</strong>
                                <br>
                                <small class="text-muted">@resource.BookingCount bookings • @resource.TotalHours hours</small>
                            </div>
                            <div class="text-end">
                                @{
                                    var stars = Math.Min(5, Math.Max(0, (int)Math.Round(resource.PopularityStars)));
                                }
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= stars)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted"></i>
                                    }
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No booking data available yet.</p>
                }
            </div>
        </div>
    </div>

    <!-- User Activity -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-person-badge text-primary me-2"></i>Top Users</h5>
            </div>
            <div class="card-body">
                @if (Model.UserActivity.Any())
                {
                    @foreach (var user in Model.UserActivity.Take(8))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
                            <div>
                                <strong>@user.UserName</strong>
                                <br>
                                <small class="text-muted">@user.BookingCount bookings</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-primary">@user.TotalHours hrs</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No user activity data available yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Resource Utilization Chart Placeholder -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-graph-up text-success me-2"></i>Resource Utilization Trends</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="alert alert-info">
                            <h6><i class="bi bi-lightbulb me-2"></i>Insights</h6>
                            <ul class="mb-0">
                                <li><strong>Peak Usage:</strong> Most bookings occur during business hours (9 AM - 5 PM)</li>
                                <li><strong>Popular Days:</strong> Tuesday through Thursday show highest utilization</li>
                                <li><strong>Resource Efficiency:</strong> Conference rooms have the highest booking frequency</li>
                                <li><strong>Growth Trend:</strong> @Model.DashboardStats.AverageUtilizationPercentage% utilization indicates healthy resource usage</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6>System Health</h6>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @Model.DashboardStats.AverageUtilizationPercentage%"></div>
                                </div>
                                <small class="text-muted">@Model.DashboardStats.AverageUtilizationPercentage% Utilization</small>
                                <div class="mt-3">
                                    <span class="badge bg-success">Optimal</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer Info -->
<div class="row mt-3">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-body py-2">
                <div class="row text-center">
                    <div class="col-md-3">
                        <h6 class="mb-0"><i class="bi bi-info-circle"></i> Report Period</h6>
                        <small>@DateTime.Now.ToString("MMMM yyyy")</small>
                    </div>
                    <div class="col-md-3">
                        <h6 class="mb-0"><i class="bi bi-clock"></i> Generated</h6>
                        <small>@DateTime.Now.ToString("MMM dd, HH:mm")</small>
                    </div>
                    <div class="col-md-3">
                        <h6 class="mb-0"><i class="bi bi-building"></i> Company</h6>
                        <small>ADS Corp</small>
                    </div>
                    <div class="col-md-3">
                        <h6 class="mb-0"><i class="bi bi-graph-up-arrow"></i> System</h6>
                        <small>Resource Management</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-2">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
    <button onclick="window.print()" class="btn btn-outline-primary btn-sm">
        <i class="bi bi-printer"></i> Print Report
    </button>
</div>