@model ResourceBooking.Controllers.SearchResultsViewModel

@{
    ViewData["Title"] = $"Search Results - {Model.Query}";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-search"></i> Search Results</h2>
        @if (!string.IsNullOrEmpty(Model.Query))
        {
            <p class="text-muted">
                Showing results for "<strong>@Model.Query</strong>" - @Model.TotalResults result(s) found
            </p>
        }
        else
        {
            <p class="text-muted">Enter a search term to find resources, bookings, and users</p>
        }
    </div>
</div>

<!-- Search Form -->
<div class="row mb-4">
    <div class="col-md-8">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="q" class="form-control form-control-lg" 
                       placeholder="Search resources, bookings, users..." 
                       value="@Model.Query" autofocus>
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Query))
{
    <div class="row">
        <!-- Resources Results -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-building"></i> Resources (@Model.Resources.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Resources.Any())
                    {
                        @foreach (var resource in Model.Resources)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 p-2 border rounded">
                                <div>
                                    <strong>@resource.Name</strong><br>
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @resource.Location
                                    </small>
                                </div>
                                <div class="text-end">
                                    @if (resource.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Unavailable</span>
                                    }
                                    <br>
                                    <a asp-controller="Resources" asp-action="Details" asp-route-id="@resource.Id" 
                                       class="btn btn-sm btn-outline-primary mt-1">View</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-building text-muted fs-1"></i>
                            <p class="text-muted mt-2">No resources found</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Bookings Results -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-calendar-check"></i> Bookings (@Model.Bookings.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Bookings.Any())
                    {
                        @foreach (var booking in Model.Bookings)
                        {
                            <div class="mb-3 p-2 border rounded">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@booking.Purpose</strong><br>
                                        <small class="text-muted">
                                            <i class="bi bi-building"></i> @booking.Resource.Name<br>
                                            <i class="bi bi-person"></i> @booking.User.FullName<br>
                                            <i class="bi bi-clock"></i> @booking.LocalStartTime.ToString("MMM dd, HH:mm")
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        @if (booking.StartTime > DateTime.UtcNow)
                                        {
                                            <span class="badge bg-primary">Upcoming</span>
                                        }
                                        else if (booking.EndTime > DateTime.UtcNow)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Completed</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-calendar-x text-muted fs-1"></i>
                            <p class="text-muted mt-2">No bookings found</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Users Results -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-people"></i> Users (@Model.Users.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        @foreach (var user in Model.Users)
                        {
                            <div class="d-flex align-items-center mb-3 p-2 border rounded">
                                <div class="me-3">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px;">
                                        @user.FullName.Substring(0, 1).ToUpper()
                                    </div>
                                </div>
                                <div>
                                    <strong>@user.FullName</strong><br>
                                    <small class="text-muted">@user.Email</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-person-x text-muted fs-1"></i>
                            <p class="text-muted mt-2">No users found</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h6><i class="bi bi-lightbulb"></i> Quick Actions</h6>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-controller="Resources" asp-action="Index" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-building"></i> Browse All Resources
                        </a>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-plus-circle"></i> Create New Booking
                        </a>
                        <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-calendar-check"></i> View All Bookings
                        </a>
                        <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-bar-chart"></i> View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>