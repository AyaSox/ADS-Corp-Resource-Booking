<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADS Corp Resource Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true" />
</head>
<body class="app-compact">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-building"></i> 
                    <span class="d-none d-sm-inline">ADS Corp</span>
                    <span class="d-sm-none">ADS</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Primary Navigation -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Dashboard")?"active":"")" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2"></i>
                                <span class="d-none d-xl-inline">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Resources")?"active":"")" asp-page="/Resources/Index">
                                <i class="bi bi-building"></i>
                                <span class="d-none d-xl-inline">Resources</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Bookings")?"active":"")" asp-page="/Bookings/Index">
                                <i class="bi bi-calendar-check"></i>
                                <span class="d-none d-xl-inline">Bookings</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Bookings/Create")?"active":"")" asp-page="/Bookings/Create">
                                <i class="bi bi-plus-circle"></i>
                                <span class="d-none d-xl-inline">New</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Bookings/Calendar")?"active":"")" asp-controller="Bookings" asp-action="Calendar">
                                <i class="bi bi-calendar"></i>
                                <span class="d-none d-xl-inline">Calendar</span>
                            </a>
                        </li>
                        
                        <!-- More Dropdown for secondary items -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="moreDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots"></i>
                                <span class="d-none d-xl-inline">More</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="moreDropdown">
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-bar-chart me-2"></i>Reports
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="EmailTest" asp-action="Index">
                                    <i class="bi bi-envelope me-2"></i>Email Test
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Help" asp-action="Index">
                                    <i class="bi bi-question-circle me-2"></i>Help & Guide
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Help" asp-action="About">
                                    <i class="bi bi-info-circle me-2"></i>About ADS Corp
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                    
                    <!-- Search Box -->
                    <form asp-controller="Search" asp-action="Index" method="get" class="d-flex me-2">
                        <div class="input-group input-group-sm">
                            <input type="text" name="q" class="form-control" placeholder="Search..." style="min-width: 150px;">
                            <button class="btn btn-outline-light" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                    
                    <!-- Right Side Icons -->
                    <div class="navbar-nav flex-row">
                        <!-- Theme Toggle Button -->
                        <div class="nav-item me-2">
                            <button id="themeToggle" class="theme-toggle-btn" type="button" aria-label="Toggle theme">
                                <i class="bi bi-sun-fill toggle-icon sun"></i>
                                <i class="bi bi-moon-stars-fill toggle-icon moon"></i>
                            </button>
                        </div>
                        
                        <!-- Notifications Bell -->
                        <div class="nav-item dropdown me-2">
                            <a class="nav-link position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bell fs-5"></i>
                                <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">0</span>
                                <span id="notificationDot" class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle" style="display:none; transform: translate(8px, -6px);"></span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end notification-dropdown" aria-labelledby="notificationDropdown" style="min-width: 300px; max-height: 400px; overflow-y: auto;">
                                <div class="dropdown-header d-flex justify-content-between align-items-center">
                                    <span>Notifications</span>
                                    <small><a href="#" id="markAllRead" class="text-decoration-none">Mark all read</a></small>
                                </div>
                                <div id="notificationList">
                                    <div class="dropdown-item text-center text-muted">
                                        <i class="bi bi-bell-slash"></i><br>No notifications
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <div class="dropdown-item text-center">
                                    <a asp-controller="Notifications" asp-action="Index" class="text-decoration-none small">View all notifications</a>
                                </div>
                            </div>
                        </div>
                        
                        <!-- User Account -->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <!-- Global flash messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-2 mb-0 small" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-2 mb-0 small" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-2 mb-0 small" role="alert">
                <i class="bi bi-info-circle-fill"></i> @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Toast container for live notifications -->
    <div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container-fluid">
            <div class="row py-3">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1">&copy; @DateTime.Now.Year - <strong>ADS Corp</strong></p>
                            <p class="small text-muted mb-0">Advanced Digital Solutions Corporation</p>
                        </div>
                        <div class="col-md-6">
                            <p class="small mb-1">
                                <i class="bi bi-envelope me-1"></i> support@adscorp.com |
                                <i class="bi bi-telephone me-1"></i> +27 (0) 11 123-4567
                            </p>
                            <p class="small text-muted mb-0">Professional Resource Management System</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="d-flex flex-wrap justify-content-md-end gap-3">
                        <a asp-controller="Help" asp-action="Index" class="text-decoration-none small">
                            <i class="bi bi-question-circle me-1"></i>Help & Guide
                        </a>
                        <a asp-controller="Help" asp-action="About" class="text-decoration-none small">
                            <i class="bi bi-info-circle me-1"></i>About
                        </a>
                        <a href="mailto:support@adscorp.com" class="text-decoration-none small">
                            <i class="bi bi-envelope me-1"></i>Support
                        </a>
                    </div>
                    <p class="small text-muted mt-2 mb-0">Secure • Reliable • Professional</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        let notificationsInitialized = false;
        let seenNotificationIds = new Set(JSON.parse(localStorage.getItem('seenNotificationIds') || '[]'));

        $(document).ready(function() {
            loadNotifications();
            setInterval(loadNotifications, 15000);
            $('#markAllRead').click(function(e) {
                e.preventDefault();
                markAllNotificationsAsRead();
            });
        });
        function loadNotifications() {
            $.get('/Notifications/GetRecent?take=5')
                .done(function(data) { updateNotificationUI(data); })
                .fail(function() { console.log('Failed to load notifications'); });
        }
        function updateNotificationUI(notifications) {
            const countBadge = $('#notificationCount');
            const dot = $('#notificationDot');
            const notificationList = $('#notificationList');

            $.get('/Notifications/GetUnreadCount').done(function(r){
                const count = r.count || 0;
                if (count > 0) { countBadge.text(count).show(); dot.show(); } else { countBadge.hide(); dot.hide(); }
            });

            notificationList.empty();
            if (!notifications || notifications.length === 0) {
                notificationList.append('<div class="dropdown-item text-center text-muted"><i class="bi bi-bell-slash"></i><br>No notifications</div>');
                return;
            }

            notifications.forEach(function(n){
                const timeAgo = n.createdAt;
                const isRead = n.isRead ? '' : 'bg-light';
                notificationList.append('<div class="dropdown-item ' + isRead + ' notification-item" data-id="' + n.id + '"><div class="d-flex justify-content-between align-items-start"><div style="flex: 1;"><div class="fw-bold small">' + escapeHtml(n.title) + '</div><div class="text-muted small">' + escapeHtml(n.message || '') + '</div><div class="text-muted" style="font-size: 0.7rem;">' + timeAgo + '</div></div>' + (!n.isRead ? '<i class="bi bi-circle-fill text-primary" style="font-size: 0.5rem; margin-top: 4px;"></i>' : '') + '</div></div>');
            });
            $('.notification-item').click(function() { markNotificationAsRead($(this).data('id')); });

            // toasts for new
            if (notificationsInitialized) {
                notifications.forEach(n => { if (!seenNotificationIds.has(n.id)) { showToast(n.title, n.message); } });
            }
            notifications.forEach(n => seenNotificationIds.add(n.id));
            localStorage.setItem('seenNotificationIds', JSON.stringify(Array.from(seenNotificationIds)));
            notificationsInitialized = true;
        }
        function markNotificationAsRead(id) { $.post('/Notifications/MarkAsRead', { id: id }).done(function() { loadNotifications(); }); }
        function markAllNotificationsAsRead() { $.post('/Notifications/MarkAllAsRead').done(function() { loadNotifications(); }); }
        function escapeHtml(str) { if (!str) return ''; return str.replace(/[&<>"']/g, function(m) { return ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;','\'':'&#39;'}[m]); }); }
        function showToast(title, message) {
            const container = document.getElementById('toastContainer');
            const el = document.createElement('div');
            el.className = 'toast align-items-center text-bg-primary border-0';
            el.setAttribute('role','alert'); el.setAttribute('aria-live','assertive'); el.setAttribute('aria-atomic','true');
            el.innerHTML = '<div class="d-flex">' +
                '<div class="toast-body"><strong>' + escapeHtml(title || 'Notification') + '</strong>' + (message ? '<div class="small">' + escapeHtml(message) + '</div>' : '') + '</div>' +
                '<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>' +
                '</div>';
            container.appendChild(el);
            const toast = new bootstrap.Toast(el, { delay: 6000 });
            toast.show();
            el.addEventListener('hidden.bs.toast', () => el.remove());
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
